<div class="jumbotron">
<h1>My Cart</h1>
</div>


  <% @line_items.each do |line_item| %>
    <p><%= line_item.product.name %></p>
    <p><%= number_to_currency line_item.product.price %></p>
    <p>Quantity: <%= line_item.quantity %></p>
    <p>Subtotal: <%= number_to_currency line_item.line_item_total %></p>
    <p>* Note: Taxes and Shipping not yet included. *</p>
  <% end %>
</div>

<div>
  <%= link_to "Proceed to Checkout?", checkout_path, class: "btn btn-success" %>
  
  <%= link_to 'Continue Shopping?', shop_path, class: "btn btn-warning" %>

  <%= link_to "Empty Cart?", empty_cart_path, class: "btn btn-danger" %>

</div>
